<div id="con" class="grid grid-cols-1 md:grid-cols-9 gap-x-4 px-6 md:p-0">
  <div class="col-span-2 text-center order-2 md:order-1">
    <%= render partial: "shared/sidenav" %>
  </div>
  <div class="col-span-7 order-1 md:order-2">
    <div class="ui-styled-text py-6 px-4" style="max-width:1000px">
      <% if @filename %>
        <%= Utilities.markdown_to_html(@filename).html_safe %>
      <% end %>
    </div>
  </div>
</div>
<script>
  document.querySelectorAll('pre code').forEach((block) => {
    hljs.highlightBlock(block);
  });
</script>
<style>
  html {
   /* These are for code highlighting and come from Tailwind */
   --color-gamma: #1e293b;
   /* Dark Navy Purple */
   --color-gamma-text: #fff;
   --color-zeta: #cbd5e1;
   /* Light Gray */
   --color-delta: #f471b5;
   /* Pink */
   --color-epsilon: #7dd3fc;
   /* Baby Blue */
  }

  .group-odin {
    ul {
      padding-left: 20px;
    }

    a {
      color: rgba(0, 0, 0, 0.5);
    }

    a:hover,
    a.active {
      color: rgba(0, 0, 0, 0.9);
    }

    a.active {
      font-weight: bold;
    }
  }
</style>