<div class="flex h-full items-center justify-center">
  <div class="ui-box w-96 max-w-96 rounded p-5">
    <div class="flex flex-col space-y-3">
      <a class="ui-button flex justify-between --motion-forward" href="<%= new_user_session_path %>">
        User Sign In
        <%= inline_svg_tag("heroicons/arrow-right.svg", class: "w-4 h-4 ml-2") %>
      </a>
      <% if Rails.env.development? %>
        <a hx-boost="false" class="ui-button flex justify-between --motion-forward" href="<%= new_admin_user_session_path %>">
          Admin User Sign In
          <%= inline_svg_tag("heroicons/arrow-right.svg", class: "w-4 h-4 ml-2") %>
        </a>
        <a class="ui-button flex justify-between --motion-forward" href="https://dietrails.com" target="_blank">
          Docs
          <%= inline_svg_tag("heroicons/arrow-right.svg", class: "w-4 h-4 ml-2") %>
        </a>
        <a class="ui-button flex justify-between --motion-forward" href="<%= demos_path %>" >
          Examples
          <%= inline_svg_tag("heroicons/arrow-right.svg", class: "w-4 h-4 ml-2") %>
        </a>
      <% end %>
    </div>
  </div>
</div>